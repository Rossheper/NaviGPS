<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="#32419f"
        android:layout_alignParentLeft="true"
        android:id="@+id/linearLayout4"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Поправки"
            android:id="@+id/textView9"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff" />
    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить"
        android:id="@+id/button"
        android:onClick="SaveEditsClick"
        android:layout_below="@+id/radioGroup1"
        android:layout_centerHorizontal="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentStart="true"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="dx:"
                android:id="@+id/dx"
                android:layout_column="1"
                android:layout_marginLeft="0dp" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/dx_text"
                android:layout_column="2"
                android:textAlignment="center"
                android:text="24" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="dy:"
                android:id="@+id/dy"
                android:layout_column="1"
                android:layout_marginLeft="0dp" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/dy_text"
                android:layout_column="2"
                android:textAlignment="center"
                android:text="-141" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="dz:"
                android:id="@+id/dz"
                android:layout_column="1"
                android:layout_marginLeft="0dp" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/dz_text"
                android:layout_column="2"
                android:textAlignment="center"
                android:text="-81"
                android:inputType="numberDecimal" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="wx:"
                android:id="@+id/wx"
                android:layout_column="1"
                android:layout_marginLeft="0dp" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/wx_text"
                android:textAlignment="center"
                android:layout_column="2"
                android:text="0"
                android:inputType="numberDecimal" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="wy:"
                android:id="@+id/wy"
                android:layout_column="1"
                android:layout_marginLeft="0dp" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/wy_text"
                android:textAlignment="center"
                android:layout_column="2"
                android:text="0"
                android:inputType="numberDecimal" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="wz:"
                android:id="@+id/wz"
                android:layout_column="1"
                android:layout_marginLeft="0dp" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/wz_text"
                android:textAlignment="center"
                android:layout_column="2"
                android:text="0"
                android:inputType="numberDecimal" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Scale:"
                android:id="@+id/textView10"
                android:layout_column="1"
                android:layout_marginLeft="0dp" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/scale_text"
                android:layout_column="2"
                android:textAlignment="center"
                android:text="0.4808"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="*(1e-6)"
                android:id="@+id/textView11"
                android:layout_column="3" />
        </TableRow>
    </TableLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup1"
        android:clickable="true"
        android:layout_below="@+id/tableLayout"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/radio_red"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Garmin"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:checked="false" />
        <RadioButton
            android:id="@+id/radio_gost"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="ГОСТ 32453-2013"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:checked="true" />
    </RadioGroup>
</RelativeLayout>